<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400sp"
        android:layout_height="570sp"
        android:elevation="2dp"
        android:layout_gravity="center"
        tools:context=".controller.MainActivity"
        android:orientation="vertical"
        android:background="@drawable/background_with_shadow"
>
    <TextView
            android:id="@+id/next_turn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center"
            android:text="@string/hello_blank_fragment"
    />

    <GridLayout
        android:id="@+id/grid_for_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
    >
        <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            android:tag="0"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_top_left"/>

        <ImageButton
            android:layout_row="0"
            android:layout_column="1"
            android:tag="1"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_top_midle"/>
        <ImageButton
            android:layout_row="0"
            android:layout_column="2"
            android:tag="2"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_top_right"/>

        <ImageButton
            android:layout_row="1"
            android:layout_column="0"
            android:tag="3"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_middle_left"/>
        <ImageButton
            android:layout_row="1"
            android:layout_column="1"
            android:tag="4"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_middle_middle"/>
        <ImageButton
            android:layout_row="1"
            android:layout_column="2"
            android:tag="5"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_middle_rigth"/>

        <ImageButton
            android:layout_row="2"
            android:layout_column="0"
            android:tag="6"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_bottom_left"/>
        <ImageButton
            android:layout_row="2"
            android:layout_column="1"
            android:tag="7"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_bottom_middle"/>
        <ImageButton
            android:layout_row="2"
            android:layout_column="2"
            android:tag="8"
            android:layout_height="120sp"
            android:layout_width="120sp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/button_bottom_rigth"/>

    </GridLayout>

    <Chronometer
            android:gravity="center"
            android:textSize="50sp"
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
    />

    <!-- Just for testing -->
