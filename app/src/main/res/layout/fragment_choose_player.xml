<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400sp"
        android:layout_height="500sp"
        tools:context=".model.SetUpGameAgainstAIFragment"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:background="@drawable/background_with_shadow"
        android:elevation="2dp"
        android:id="@+id/mainLayout"
>
    <TextView
            android:id="@+id/top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_player_1"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
    />

   <Spinner
           android:id="@+id/choose_player_spinner"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:layout_marginBottom="15sp"
           android:layout_marginStart="20sp"
           android:layout_marginEnd="20sp"
           android:textSize="20sp"
   />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="20sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="20sp"
    >
        <EditText
                android:id="@+id/add_player_text"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:hint="@string/add_new_player"
                android:inputType="text"
                android:textSize="20sp"
        />
        <ImageButton
                android:id="@+id/add_player_button"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_add_24dp"
                android:contentDescription="@string/add_player_one"
        />

    </LinearLayout>

    <Button
            android:id="@+id/bottom_button_on_player_select"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_game"
    />
</LinearLayout>